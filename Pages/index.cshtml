@page
@using System.Globalization
@model MyRazorApp.Pages.index

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <table>
        <thead>
        <tr>
            <td>ID</td>
            <td>Title</td>
            <td>Price</td>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Price.ToString("C", new CultureInfo("pt-BR"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>
</body>
</html>